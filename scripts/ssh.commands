# Return the command results
ssh-command			=	ssh -q -oStrictHostKeyChecking=no -i {{key}} {{username}}@{{host}} sudo "{{command}}"

create-file			=	echo '{{base64contents}}'' | base64 --decode > {{filename}} && chmod +x {{filename}}

# Return 0 if found, other else
exists				=	ls {{path}}

create-ssh-keys		=	ssh-keygen -t rsa -f {{filename}} -q -N '' -b 2048